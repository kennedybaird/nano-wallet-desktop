{{#bs-form model=(changeset (hash seed=seed representative=representative) ChangeRepresentativeValidations) onSubmit=(action onChangeRepresentative wallet) as |form|}}
  {{#form.element label=(t 'seed') property="seed" as |el|}}
    {{password-toggle inputId=el.id label=(t 'seed') value=el.value placeholder=(t 'unknown') readonly=true}}
  {{/form.element}}
  {{#form.group}}
    {{#form.element controlType="text" label='Representative' property='representative'
        minlength=64 maxlength=65 required=true pattern="^(xrb|nano)(_|-)[13](?![lv])[a-z1-9]{59}$" as |el|}}
      {{el.control class="text-truncate text-monospace"}}
    {{/form.element}}
    {{#bs-button buttonType="submit" type="warning" icon="fa fa-cubes" class="w-100"}}
      {{t 'wallets.settings.changeRepresentative'}}
    {{/bs-button}}
  {{/form.group}}
  {{#form.element label=(t 'currencies')}}
    {{#power-select-multiple
      options=availableCurrency
      selected=currencies
      onchange=(action 'updateCurrencies')
      as |currency|
    }}
      <strong>{{currency.code}}</strong> - {{currency.name}}
    {{/power-select-multiple}}
  {{/form.element}}
{{/bs-form}}
{{#wallet-password wallet=wallet onSubmit=(action onChangePassword)}}
  {{#bs-button buttonType="submit" type="danger" icon="fa fa-key" class="w-100"}}
    {{t 'wallets.settings.changePassword'}}
  {{/bs-button}}
{{/wallet-password}}